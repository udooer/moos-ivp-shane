//----------------------------------------------
// Vehicle behavior file
//----------------------------------------------

initialize   DEPLOY  = false
initialize   RETURN  = false
initialize   STATION_KEEP = false
initialize   CIRCLE  = true 
initialize   SURVEY  = false
initialize   AVOID   = true
initialize   SURVEY_UNDERWAY = false
initialize   OPREGION = true

set MODE = ACTIVE {
  DEPLOY = true
} INACTIVE

set MODE = RETURNING {
  MODE = ACTIVE
  RETURN = true
}

set MODE = STATION-KEEPING {
  MODE = ACTIVE
  STATION_KEEP = true
  RETURN = false
}

//set MODE = EXCHANGING { 
//  MODE = ACTIVE
//  RETURN = false
//  RETURN2EXCHANGE = true
//}
set MODE = SURVEYING {
  MODE = ACTIVE
  SURVEY = true
  RETURN = false
}
set MODE = EXCHANGING { 
  MODE = ACTIVE
  RETURN = false
  RETURN2EXCHANGE = true
}
set MODE = CIRCLE_SEARCHING {
  MODE = ACTIVE
  CIRCLE = true
  RETURN = false
}

//---------------------------------------------
Behavior = BHV_Lawnmower
{
    name = lawnmower
    pwt = 100
    condition = MODE==SURVEYING
    activeflag = SURVEY_UNDERWAY=true
    inactiveflag = SURVEY_UNDERWAY=false    
    endflag = RETURN=true

    amplitude = 200
    resolution = 300
    w = 3
    arrival_radius = 10
}

//----------------------------------------------
Behavior = BHV_PolygonV2
{
  name = polygon_circle
  pwt = 100
  condition = MODE==CIRCLE_SEARCHING
  activeflag   = SURVEY_UNDERWAY = true
  perpetual = true

  desired_speed = 4
  polygon = path=circle, center_x=$(CENTER_X), center_y=$(CENTER_Y), radius=85, pts=10 
  arrival_radius = 3
  clockwise = $(CLOCK)
  repeat = 3
}

//----------------------------------------------
Behavior = BHV_Waypoint
{
  name       = waypt_exchange
  pwt        = 100
  condition  = MODE==EXCHANGING
  activeflag   = SURVEY_UNDERWAY = true
  perpetual  = true
  endflag    = RETURN2EXCHANGE = false
  endflag    = SURVEY= true
//  endflag    = STATION_KEEP = true

         speed = 4.0
        radius = 2.0
     nm_radius = 8.0
        points = $(EXCHANGE_POS)
        repeat = 10
          lead = 8
}

